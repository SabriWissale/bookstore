{% extends "base.html.twig" %}

{% block title %} Details {% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />

{% endblock %}

{% block body %}

<div class="card mb-3">
  <h3 class="card-header">{{livre.getTitre()}}</h3>
  <div class="card-body">
    <h5 class="card-title">Details and info</h5>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
     <defs>
       <pattern id="img1" patternUnits="userSpaceOnUse" width="100" height="100">
         <image href="http://4.bp.blogspot.com/-DleLfBggjro/Ucdanj8FQGI/AAAAAAACBJA/M65D6A4cYT0/s1600/NPR+books+header.jpg" x="0" y="50" width="100" height="70" />
       </pattern>
   </defs>
    <rect width="100%" height="100%" fill="url(#img1)"></rect>
    
          
  </svg>
 
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><b>ISBN : </b>{{livre.getISBN()}}</li>
    <li class="list-group-item"><b>pages : </b>{{livre.getNombrePages()}} pages</li>
    <li class="list-group-item"><b>Note : </b>{{livre.getNote()}}</li>
  </ul>
  <div class="card-body">
  <h4 class="h4"><b>Authors: </b></h4>
  {% for auteur in livre.getAuteurs() %}
        <li style="margin-bottom:10px;">{{auteur.getNomPrenom()}}</li>
    {% endfor %}
    
  </div>
  <div class="card-footer text-muted">
    publishing date : </b>{{livre.getDateDeParution() | date("d/m/Y")}}
  </div>
</div>

{% endblock %}