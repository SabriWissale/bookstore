{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}

<body>

{% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h3 class="card-title text-center mb-4 fw-light fs-2"><strong>Sign In</strong></h3>
            <form action="{{ path('login') }}" method="post">
              <div class="form-floating mb-3">
                <input type="text" name="_username" class="form-control" id="floatingInput"  >
                <label for="floatingInput" style="padding:5px;">Username</label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPassword" name="_password" >
                <label for="floatingPassword" style="padding:5px;">Password</label>
              </div>

              <input type="hidden" name="_target_path" value="/admin"/> 
            
              <div class="d-grid">
                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Sign
                  in</button>
              </div>

              
              
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
