{% extends "base.html.twig" %}

{% block title %} Auteurs {% endblock %}

{% block javascripts %}
<script>
$(document).ready(function(){
    $('#myTable').dataTable();
	addClass();
});

}

</script>         
{% endblock %}

{% block body %}


<h3 style="padding:20px;"> List of Authors</h3>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
<div class="row">
	<div class="col-lg-12">
		<div class="main-box clearfix">
			<div class="table-responsive">
				<table class="table user-list table-striped" id="myTable">
					<thead>
						<tr>
							<th><span>Username</span></th>
							<th><span>birthdate</span></th>
							<th class="text-center"><span>sexe</span></th>
							<th><span>nationality</span></th>
							<th>&nbsp;</th>
						</tr>
					</thead>
					<tbody>
                       {% for auteur in auteurs %}
						<tr>
							<td>
								<img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" style="width:50px;">
								<a href="#" class="user-link">{{auteur.getNomPrenom()}}</a>
								
							</td>
							<td style="vertical-align:middle;">
								<strong>{{auteur.getDateNaissance() | date("d/m/Y") }}</strong>
							</td>
							<td class="text-center" style="vertical-align:middle;">
								<span class="label label-default">{{auteur.getSexe()}}</span>
							</td>
							<td style="vertical-align:middle;">
								<strong>{{auteur.getNationalite()}}</strong>
							</td>

							<td style="width: 20%; vertical-align:middle;">
								<a href="{{ path('showAuteur', {'id' : auteur.getId()}) }}" class="table-link" >
									<span><strong>
										More details
									</strong>
                                    </span>
								</a>
							</td>
						</tr>
                        {% endfor %}

</tbody>
</table>
</div>

		</div>
	</div>
</div>
</div>



{% endblock %}